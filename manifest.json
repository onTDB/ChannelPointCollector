{
    "manifest_version": 3,
    "name": "ChannelPointCollector",
    "description": "Automatically collects Twitch channel points.",
    "version": "0.2",
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "ChannelPointCollector"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "https://www.twitch.tv/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "icons": {
        "128": "128x128.png",
        "48": "48x48.png",
        "16": "16x16.png"
    }
}